            </StackLayout>
            <StackLayout Grid.Column="1">
                <!--<Entry x:Name="TxtCPC" Keyboard="Chat" Style="{StaticResource EntryStyle}"></Entry>-->
                <local:TxtCaja x:Name="TxtCPC" Style="{StaticResource Key=Mica}"></local:TxtCaja>
            </StackLayout>
        </Grid>
     
        
       

    </Grid>
    

</ContentPage>
